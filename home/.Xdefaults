URxvt*foreground: white
URxvt*depth: 32
URxvt*background: black
URxvt*transparent: true
URxvt*shading: 15
!URxvt*inheritPixmap: true
! prevent autojump to end of output
!URxvt*scrollTtyOutput: false
!URxvt*scrollWithBuffer: false
!URxvt*scrollTtyKeypress: true

! font
URxvt.font: xft:Hack-Regular:pixelsize=14,xft:Symbola
URxvt.boldFont: xft:Hack-Bold:pixelsize=14:weight=bold,xft:Symbola
URxvt.italicFont: xft:Hack-RegularOblique:pixelsize=14:slant=italic,xft:Symbola

! color
*.color0: #1d2021
*.color1: #cc241d
*.color2: #98971a
*.color3: #d79921
*.color4: #348588
*.color5: #b16286
*.color6: #689d61
*.color7: #a89984
*.color8: #928374
*.color9: #fb4934
*.color10: #b8bb26
*.color11: #fabd2f
*.color12: #83a598
*.color13: #d3869b
*.color14: #8ec07c
*.color15: #ebdbb2

! scrollbar
URxvt*scrollColor: #B2B2B2
URxvt*troughColor: #333333
URxvt*scrollBar_floating: false
URxvt*scrollBar_right: true
URxvt*scrollstyle: plain

URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard
